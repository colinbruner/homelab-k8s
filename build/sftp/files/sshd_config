# SSHD Configuration for Hardened SFTP Server

AuthorizedKeysFile /etc/ssh/authorized_keys
HostKey /var/sftp-key/private-key
IgnoreUserKnownHosts yes

PubkeyAcceptedAlgorithms +ssh-rsa,ssh-rsa-cert-v01@openssh.com,ssh-dss,ssh-dss-cert-v01@openssh.com

# Chroot the SFTP users to their home directory
Subsystem sftp internal-sftp
Match User scanner
  ChrootDirectory /home/%u
  PasswordAuthentication no
  ForceCommand internal-sftp
  AllowTcpForwarding no
  X11Forwarding no
  PermitTunnel no
  AllowAgentForwarding no

# Logging
LogLevel DEBUG3
